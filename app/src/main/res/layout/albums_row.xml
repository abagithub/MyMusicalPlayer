<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutStyle"
    android:layout_height="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/viewMargin"
            android:layout_marginTop="@dimen/viewMargin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/windowBackground"
            android:maxHeight="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_cover" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:paddingBottom="@dimen/row_margin"
            android:paddingLeft="@dimen/row_margin"
            android:paddingStart="@dimen/row_margin"
            android:paddingTop="@dimen/row_margin">

            <TextView
                android:id="@+id/albums_name"
                style="@style/headerPrimary"
                android:text="@string/albums" />

            <TextView
                android:id="@+id/artist_name"
                style="@style/headerSecondary"
                android:text="@string/songs" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/viewStyle"
        android:layout_marginTop="0dp" />

</LinearLayout>